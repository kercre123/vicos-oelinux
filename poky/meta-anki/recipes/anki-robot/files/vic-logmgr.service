[Unit]
Description=Victor log manager daemon
SourcePath=/anki/bin/vic-logmgr.sh
PartOf=anki-robot.target

Wants=vic-init.service
After=vic-init.service

ConditionFileIsExecutable=/anki/bin/vic-logmgr.sh

[Service]
EnvironmentFile=/anki/etc/vic-logmgr.env
ExecStart=/bin/sh /anki/bin/vic-logmgr.sh $VIC_LOGMGR_OPTS
Restart=always

[Install]
WantedBy=anki-robot.target


CFLAGS=-O2 -g -Wall -Iinc
CPPFLAGS=-I$(DRIVER_DIR) -I$(DRIVER_DIR)/inc
LDLIBS=-lrt

PHIO_BIN:=phio
PHIO_OBJS:=phio.o

VL53l1_REG_BIN:=vl53l1_reg
VL53l1_REG_OBJS:=vl53l1_reg.o

VL53l1_IOTEST_BIN:=vl53l1_iotest
VL53l1_IOTEST_OBJS:=vl53l1_iotest.o

ANKITOF_BIN:=ankitof
ANKITOF_OBJS:=ankitof.o

all: $(PHIO_BIN) $(VL53l1_REG_BIN) $(VL53l1_IOTEST_BIN) $(ANKITOF_BIN)

clean:
	rm -f $(PHIO_BIN) $(PHIO_OBJS) $(VL53l1_REG_BIN) $(VL53l1_REG_OBJS) $(VL53l1_IOTEST_BIN) $(VL53l1_IOTEST_OBJS) $(ANKITOF_BIN) $(ANKITOF_OBJS)

$(VL53l1_IOTEST_BIN): $(VL53l1_IOTEST_OBJS)

$(VL53l1_REG_BIN): $(VL53l1_REG_OBJS)

$(PHIO_BIN): $(PHIO_OBJS)

$(ANKITOF_BIN): $(ANKITOF_OBJS)
